{% extends "RigauxtAlumniBundle::layout.html.twig" %}

{% block title %}{{ parent() }} - Promotions{% endblock %}

{% block rigauxtalumni_body %}
	<div class="panel-group" id="accordion">
		{% for id, promo in promotions %}
			{% if promo.annee != "0" %}
				<div class="panel panel-default">
					<div class="panel-heading">
						<button type="button" class="btn btn-default" data-toggle="collapse" data-target="#collapse{{ id }}" data-parent="#accordion">
							{{ promo.annee }}
						</button>
					</div>
					<div id="collapse{{ id }}" class="panel-collapse collapse {% if id == 0 %}in{% endif %}">
						<div class="panel-body">
							{% for id, eleve in promo.users %}
								{% if eleve.membre %}
									<a class="btn btn-default" href="{{ path('rigauxt_user_profile', {'username': eleve}) }}">
										{{ format_avatar(eleve, 32) }}
										{% if eleve.nom != null or eleve.prenom != null %}
											{{ eleve.prenom }}
											{% if eleve.prenom != null %}
											{% endif %}
											{{ eleve.nom }}
										{% else %}
											{{eleve.username}}
										{% endif %}
									</a>
								{% endif %}
							{% endfor %}
						</div>
					</div>
				</div>
			{% endif %}
		{% endfor %}
	</div>
{% endblock %}
